{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [ {
    "matchUpdateTypes": ["minor", "patch"],
    "automerge": true,
    "ignoreTests": true
    }
  ],
  "baseBranches": ["main"],
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
